# ------------------------------------------------------------
# 默认：不管理任何窗口（白名单制）
# ------------------------------------------------------------

yabai -m rule --add manage=off

# ------------------------------------------------------------
# Space 2：彻底禁止管理（通信空间）
# ------------------------------------------------------------

yabai -m rule --add space=2 manage=off

# ------------------------------------------------------------
# Space 1 白名单（工作空间）
# ------------------------------------------------------------

# 默认所有空间使用浮动；仅 Space 1 使用 bsp
yabai -m config layout float
yabai -m space 1 --layout bsp

# 仅允许这些应用在 Space 1 被管理（bsp）
yabai -m rule --add app="^iTerm2$"  manage=on space=1
yabai -m rule --add app="^Safari$"  manage=on space=1
yabai -m rule --add app="^ChatGPT$" manage=on space=1

# 明确排除系统设置类窗口（防止被管理）
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m config window_placement second_child
yabai -m config split_ratio 0.50
yabai -m config auto_balance off
# 窗口之间的间距（inner gap）
yabai -m config window_gap 12

# 屏幕边缘的留白（outer gap）
yabai -m config top_padding    16
yabai -m config bottom_padding 16
yabai -m config left_padding   16
yabai -m config right_padding  16
